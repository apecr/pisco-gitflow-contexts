{
  "name": "finish",
  "description": "[Git flow]: Finish and merge branch",
  "steps": {
    "validate" : {
      "excludes" : ["feature", "hotfix", "release"],
      "type" : "flow"
    },
    "setVersion": {
      "excludes" : ["feature", "hotfix", "release"],
      "component": {
        "requires" : {
          "pisco-cells-json-setVersion": "^0.0.1"
        }
      },
      "recipe": {
        "requires" : {
          "pisco-cells-json-setVersion": "^0.0.1"
        }
      },
      "app": {
        "requires" : {
          "pisco-cells-json-setVersion": "^0.0.1"
        }
      }
    },
    "finish": {
      "implementation-check" : false,
      "feature": {
        "requires" : {
          "pisco-gitflow-finish": "^0.0.1"
        }
      },
      "hotfix": {
        "requires" : {
          "pisco-gitflow-finish": "^0.0.1"
        }
      },
      "release": {
        "requires" : {
          "pisco-gitflow-finish": "^0.0.1"
        }
      }
    },
    "publish": {
      "excludes" : ["feature", "hotfix", "release"],
      "type" : "flow",
      "params" : {
        "tag": true
      }
    }
  }
}
